@model IEnumerable<EPedia.Models.DB.Page>

<head>
    <title>EPedia - поиск</title>
</head>

<div onLoad="">
    <link rel="stylesheet" href="~/Content/main.css">
    <link rel="shortcut icon" href="~/Content/images/ico.png" type="image/png">
    <script src="~/Scripts/modal.js"></script>
    <script src="~/Scripts/authorization.js"></script>
    <script src="~/Scripts/scrollToTop.js"></script>

    <div id="header">
        <div id="logo"><a href="~/Home/index">EPedia</a></div>
        <div id="media">
            <a href="~/Home/search"><img src="~/Content/images/search.png"></a>
            <img src="~/Content/images/lk.png" onClick="AuthorizationRedirect()">
            <a href="https://vk.com/animalplanetrussia" target="_blank"><img src="~/Content/images/vk.png"></a>
            <a href="https://www.instagram.com/animalplanet/" target="_blank"><img src="~/Content/images/instagram.png"></a>
            <a href="https://ru-ru.facebook.com/AnimalPlanet" target="_blank"><img src="~/Content/images/facebook.png"></a>
            <a href="https://www.youtube.com/user/AnimalPlanetTV" target="_blank"><img src="~/Content/images/youtube.png"></a>
        </div>
    </div>

    <div class="container" id="content">
        <div class="container" id="nav">
            <div class="menu_item">
                <a href="~/Home/index">Главная</a>
            </div>
            <div class="menu_item">
                <a href="">Звери</a>
                <ul class="submenu">
                    <li><a href="~/Home/cat">Кошка</a></li>
                </ul>
            </div>
            <div class="menu_item">
                <a href="">Птицы</a>
                <ul class="submenu">
                    <li><a href="~/Home/parrot">Попугай</a></li>
                </ul>
            </div>
            <div class="menu_item">
                <a href="">Рыбы</a>
                <ul class="submenu">
                    <li><a href="~/Home/error">Подменю</a></li>
                </ul>
            </div>
            <div class="menu_item_right">
                <a href="">Растения</a>
                <ul class="submenu">
                    <li><a href="~/Home/error">Подменю</a></li>
                </ul>
            </div>
        </div>

        @using (Ajax.BeginForm("selectPages", "Home", new AjaxOptions { UpdateTargetId = "searchResults" }, new { id = "searchForm" }))
        {
            <table class="spec">
                <tr>
                    <td class="separator">Параметры</td>
                </tr>
                <tr>
                    <td>
                        Наименование: <input type="text" name="name" onkeyup="onkeyup_colfield_check(event)" />
                    </td>
                </tr>
                <tr>
                    <td>
                        Категория: <input type="text" name="category" onkeyup="onkeyup_colfield_check(event)" />
                    </td>
                </tr>
            </table>
            <input name="subm" type="submit" style="visibility: hidden">

        }
        <script language="javascript">
            function onkeyup_colfield_check(e) {
                $("#searchForm").trigger("submit");
            }
        </script>

        <div class="greetings">
            <h1 class="headline">Поиск</h1>
        </div>

        <div class="bookmarks" id="searchResults">
            <ul>
                @foreach (var page in Model)
                {
                    <li>
                        <a href="@page.link">@page.name</a>
                    </li>
                }
            </ul>
        </div>
    </div>

    <button onclick="topFunction()" id="myBtn" title="Go to top">Top</button>
    <div class="container" id="footer">
    </div>
    @Scripts.Render("~/scripts/jquery-1.10.2.min.js")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")

</div>