@model IEnumerable<EPedia.Models.DB>
@{
    //ViewBag.Title = "Home Page";
    Layout = null;
}

<HTML>

<head>
    <title>EPedia - личный кабинет</title>
    <link rel="stylesheet" href="~/Content/main.css">
    <link rel="shortcut icon" href="~/Content/images/ico.png" type="image/png">
    <script src="~/Scripts/modal.js"></script>
    <script src="~/Scripts/authorization.js"></script>
    <script src="~/Scripts/scrollToTop.js"></script>
</head>

<body onLoad="FillBookmarks()">
    <div id="header">
        <div id="logo"><a href="~/Home/index">EPedia</a></div>
        <div id="media">
            <img src="~/Content/images/lk.png" onClick="AuthorizationRedirect()">
            <a href="https://vk.com/animalplanetrussia" target="_blank"><img src="~/Content/images/vk.png"></a>
            <a href="https://www.instagram.com/animalplanet/" target="_blank"><img src="~/Content/images/instagram.png"></a>
            <a href="https://ru-ru.facebook.com/AnimalPlanet" target="_blank"><img src="~/Content/images/facebook.png"></a>
            <a href="https://www.youtube.com/user/AnimalPlanetTV" target="_blank"><img src="~/Content/images/youtube.png"></a>
        </div>
    </div>

    <div class="container" id="content">
        <div class="container" id="nav">
            <div class="menu_item">
                <a href="~/Home/index">Главная</a>
            </div>
            <div class="menu_item">
                <a href="">Звери</a>
                <ul class="submenu">
                    <li><a href="~/Home/cat">Кошка</a></li>
                </ul>
            </div>
            <div class="menu_item">
                <a href="">Птицы</a>
                <ul class="submenu">
                    <li><a href="~/Home/parrot">Попугай</a></li>
                </ul>
            </div>
            <div class="menu_item">
                <a href="">Рыбы</a>
                <ul class="submenu">
                    <li><a href="~/Home/error">Подменю</a></li>
                </ul>
            </div>
            <div class="menu_item_right">
                <a href="">Растения</a>
                <ul class="submenu">
                    <li><a href="~/Home/error">Подменю</a></li>
                </ul>
            </div>
        </div>

        @using (Ajax.BeginForm("selectPages", "Home", new AjaxOptions { UpdateTargetId = "searchResults" }))
        {
            <table class="spec">
                <tr>
                    <td class="separator">Параметры</td>
                </tr>
                <tr>
                    <td>
                        Наименование: <input type="text" name="name" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <table>
                            <tr>
                                <td> Звери <input name="beasts" type="checkbox" /></td>
                                <td> Птицы <input name="birds" type="checkbox" /></td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr>
                    <td>
                        <table>
                            <tr>
                                <td> Рыбы <input name="fishes" type="checkbox" /></td>
                                <td> Растения <input name="plants" type="checkbox" /></td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        }

        <div class="greetings">
            <h1 class="headline">Поиск</h1>
        </div>

        <div id="searchResults">

        </div>
    </div>

    <button onclick="topFunction()" id="myBtn" title="Go to top">Top</button>
    <div class="container" id="footer">
    </div>
</body>

</HTML>
